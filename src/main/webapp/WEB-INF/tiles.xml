<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <!--Basic template-->

    <definition name="BasicTemplate" template="/WEB-INF/layout/layout.jsp">
        <put-attribute name="title" 	value="Index" />
        <put-attribute name="include"   value="/WEB-INF/layout/include.jsp" />
        <put-attribute name="header" 	value="/WEB-INF/layout/header.jsp" />
        <put-attribute name="sidebar" 	value="/WEB-INF/layout/sidebar.jsp" />
        <put-attribute name="active" 	value="" />
        <put-attribute name="body" 		value="" />
    </definition>

    <definition name="public" extends="BasicTemplate">
        <put-attribute name="title" 	value="Public pages" />
        <put-attribute name="body"      value="/WEB-INF/public.jsp" />
    </definition>

    <!--User JSP-->

    <definition name="users/index" extends="BasicTemplate">
        <put-attribute name="title" 	value="Users index" />
        <put-attribute name="active"    value="/WEB-INF/admin/users/indexSidebar.jsp" />
        <put-attribute name="body"      value="/WEB-INF/admin/users/index.jsp" />
    </definition>

    <definition name="users/new" extends="BasicTemplate">
        <put-attribute name="title" 	value="New user" />
        <put-attribute name="active"    value="/WEB-INF/admin/users/newSidebar.jsp" />
        <put-attribute name="body"      value="/WEB-INF/admin/users/new.jsp" />
    </definition>

    <definition name="users/show" extends="BasicTemplate">
        <put-attribute name="title" 	value="User info" />
        <put-attribute name="active"    value="/WEB-INF/admin/users/showSidebar.jsp" />
        <put-attribute name="body"      value="/WEB-INF/admin/users/show.jsp" />
    </definition>

    <definition name="users/newPermission" extends="BasicTemplate">
        <put-attribute name="title" 	value="New user permission" />
        <put-attribute name="active"    value="/WEB-INF/admin/users/permissions/newSidebar.jsp" />
        <put-attribute name="body"      value="/WEB-INF/admin/users/permissions/new.jsp" />
    </definition>

    <definition name="users/search" extends="BasicTemplate">
        <put-attribute name="title" 	value="Search" />
        <put-attribute name="active"    value="/WEB-INF/admin/users/index.jsp" />
        <put-attribute name="body"      value="/WEB-INF/admin/users/search.jsp" />
    </definition>

    <!--Page JSP-->

    <definition name="pages/index" extends="BasicTemplate">
        <put-attribute name="title" 	value="Pages index" />
        <put-attribute name="active"    value="/WEB-INF/admin/pages/indexSidebar.jsp" />
        <put-attribute name="body"      value="/WEB-INF/admin/pages/index.jsp" />
    </definition>

    <definition name="pages/new" extends="BasicTemplate">
        <put-attribute name="title" 	value="New page" />
        <put-attribute name="active"    value="/WEB-INF/admin/pages/newSidebar.jsp" />
        <put-attribute name="body"      value="/WEB-INF/admin/pages/new.jsp" />
    </definition>

    <definition name="pages/show" extends="BasicTemplate">
        <put-attribute name="title" 	value="Page info" />
        <put-attribute name="active"    value="/WEB-INF/admin/pages/showSidebar.jsp" />
        <put-attribute name="body"      value="/WEB-INF/admin/pages/show.jsp" />
    </definition>

    <definition name="pages/newPermission" extends="BasicTemplate">
        <put-attribute name="title" 	value="New page permission" />
        <put-attribute name="active"    value="/WEB-INF/admin/pages/permissions/newSidebar.jsp" />
        <put-attribute name="body"      value="/WEB-INF/admin/pages/permissions/new.jsp" />
    </definition>

</tiles-definitions>